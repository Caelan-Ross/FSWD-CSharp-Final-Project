@model IEnumerable<MACK.Models.Colour>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ColourName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ColourName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ColourId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ColourId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ColourId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
