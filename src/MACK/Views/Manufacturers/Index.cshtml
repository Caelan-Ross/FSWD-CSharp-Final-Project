@model IEnumerable<MACK.Models.Manufacturer>

@{
    ViewData["Title"] = "Vehicle Manufacturers";
}

<div class="vehicles-grid">
    <!-- Heading -->
    <div class="vehicle-data-title flex">
        <h2>Manufacturers</h2>
        <!-- Create -->
        <a asp-action="Create" class="btn editBtn">
            <i class="fas fa-plus"></i>
        </a>
    </div>
</div>

<!-- Display Manufacturers -->
<div class="vehicle-form">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ManufacturerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ManufacturerName)
                </td>
                <td class="table-delete">
                    <a asp-action="Delete" asp-route-id="@item.ManufacturerId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
