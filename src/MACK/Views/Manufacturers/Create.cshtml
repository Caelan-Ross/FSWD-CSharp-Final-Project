@model MACK.Models.Manufacturer

@{
    ViewData["Title"] = "Create";
}
<div class="vehicle-data-title flex">
    <h2>Manufacturers</h2>
    <a asp-action="Index" class="btn editBtn"><i class="fa-solid fa-chevron-left"></i></a>
</div>

<h4>Create Manufacturer</h4>
<hr />
<div class="row vehicle-form">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManufacturerName" class="control-label">Manufacturer Name</label>
                <input asp-for="ManufacturerName" class="form-control" />
                <span asp-validation-for="ManufacturerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
