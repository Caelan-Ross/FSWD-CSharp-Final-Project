@using MACK.Areas.Identity.Pages.Account;
@model LoginModel

@{
    ViewData["Title"] = "Welcome";
}
<!-- Registration Section -->
<div class="text-left">
    <h1 class="display-4">Welcome to MACK_IMS</h1>
</div>

<div class="vehicle-data-title row round-img index-card">
    <hr />
    <div class="col-md-6 home-copy">
        <h2>Dealership Inventory Management Solutions</h2>
        <p>
            Introducing our innovative dealership inventory data management solution - a game-changer in the automotive dealership industry.<br /><br />

            With MACK_IMS technology, you'll have full control and visibility over your dealership's inventory, allowing you to make informed decisions and optimize your operations like never before.
        </p>
    </div>
    <div class="col-md-6 home-copy">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <div class="checkbox-wrapper">
                                <input class="form-check-input my-2" asp-for="Input.RememberMe" />
                                <span class="checkbox-text">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                            </div>
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
            </form>
        </section>
    </div>
    <hr />
</div>
