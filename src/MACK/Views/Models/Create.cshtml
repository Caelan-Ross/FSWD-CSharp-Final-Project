@model MACK.Models.Model

@{
    ViewData["Title"] = "Create";
}

<div class="vehicle-data-title flex">
    <h2>Models</h2>
    <a asp-action="Index" class="btn editBtn"><i class="fa-solid fa-chevron-left"></i></a>
</div>

<h4>Create Model</h4>
<hr />
<div class="row vehicle-form">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModelName" class="control-label"></label>
                <input asp-for="ModelName" class="form-control" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManufacturerId" class="control-label model-control">Manufacturer</label>
                <select id="manufacturerDropdown" asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId">
                    <option value="" selected disabled>Select a manufacturer</option>
                    @foreach (var manufacturer in ViewBag.Manufacturers)
                    {
                        <option value="@manufacturer.Value">@manufacturer.Text</option>
                    }
                </select>
                <span asp-validation-for="ManufacturerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
